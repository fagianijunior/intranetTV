<h1>Funcionários</h1>

<div class="row">
  <div class="col-md-12 column">
    <%= link_to 'Novo funcionário', new_employer_path, class: "btn btn-primary" %>
    <hr>
  </div>
</div>
<div class="row">
  <div class="col-md-12 column">
    <div class="row">
      <% @employers.each do |employer| %>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
          <div class="thumbnail">
            <% if employer.avatar? %>
              <%= image_tag employer.avatar %>
            <% else %>
              <%= image_tag 'medium_avatar.png' %>
            <% end %>
            <div class="caption">
              <h3 class="text-center">
                <%= "#{employer.name.split(" ").first} #{employer.name.split(" ").second}" %>
              </h3>
              <div class="text-center">
              <%= link_to 'Detalhes', employer, class: "btn btn-default" %>
              <%= link_to 'Editar', edit_employer_path(employer), class: "btn btn-default"%>
              </div>
              <!--%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } % -->
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>