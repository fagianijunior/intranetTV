<p id="notice"><%= notice %></p>
<hr>
<h1>Dados do funcionário</h1>
<hr>
<div class="row">
  <div class="col-md-12 column">
    <div class="col-md-6 column text-right">
      <table class="table table-hover">
        <tr>
          <th>Nome:</th>
          <th><%= @employer.name %></th>
        </tr>
        <tr>
          <th>Sexo:</th>
          <th><%= (@employer.sex == 'M') ? 'Masculino' : 'Feminino' %></th>
        </tr>
        <tr>
          <th>Data de admissão:</th>
          <th><%= @employer.admission.strftime("%d/%m/%Y") %></th>
        </tr>
        <tr>
          <th>Ativo:</th>
          <th><%= "Sim" if !@employer.dismiss %></th>
        </tr>
      </table>
      <%= link_to 'Editar', edit_employer_path(@employer), class: "btn btn-default" %>
      <%= link_to 'Voltar', employers_path, class: "btn btn-default" %>
    </div>
    <div class="col-md-6 column">
      <p>
        <% if @employer.avatar %>
          <%= image_tag @employer.avatar, width: 200 %>
        <% else %>
          <%= image_tag 'large_avatar.png' %>
        <% end %>
      </p>
    </div>
    <div class="col-md-12 column">
      <%= render "uniforms" %>
    </div>
  </div>
</div>