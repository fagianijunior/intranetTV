<%= simple_form_for(@employer, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: 'Nome completo' %>
    <%= f.input :avatar, label: 'Foto' %>
    <%= f.input :sex, label: 'Sexo',
                      as: :select,
                      default: 'M',
                      selected: @employer.sex,
                      collection: [['Masculino', 'M'], ['Feminino', 'F']] %>
    <div class='datetimerange'>
      <%= f.input :admission, label: 'Admissão:', as: :date_picker, input_html: {data: {date_options: {defaultDate: Date.current }}}%>
      <%= if !f.object.new_record?
            f.input :dismiss, label: 'Demissão:', as: :date_picker, input_html: {data: {date_options: {defaultDate: '' }}}
      end %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, value: "Salvar", class: "btn-primary btn-block" %>
  </div>
<% end %>